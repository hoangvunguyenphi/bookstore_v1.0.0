<header class="main-header">
   
    <!-- Logo -->
    <a href="/admin" class="logo">
        <span class="logo-lg"><b>Quản lý</b></span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <a
            href="#"
            class="sidebar-toggle"
            data-toggle="push-menu"
            role="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span> <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <li class="dropdown notifications-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-bell-o"></i>
                        <span class="label label-warning" id="countNotifi"
                            >0</span>
                    </a>
                    <ul class="dropdown-menu" id="dropdownmenuThongBao">
                            <li class="header">Bạn có 0 thông báo</li>
                    </ul>
                </li>
                <!-- User Account: style can be found in dropdown.less -->
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img
                            src="/dist/img/user2-160x160.jpg"
                            class="user-image"
                            alt="User Image"
                        />
                        <span class="hidden-xs">Người quản lý</span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header">
                            <img
                                src="/dist/img/user2-160x160.jpg"
                                class="img-circle"
                                alt="User Image"
                            />
                            <p>
                                Người quản lý được cấp tài khoản mặc định
                                <small>Member since Nov. 2012</small>
                            </p>
                        </li>
                        <li class="user-footer">
                            <div class="pull-right">
                                <a
                                    href="/admin/logout"
                                    class="btn btn-default btn-flat"
                                    >Sign out</a
                                >
                            </div>
                        </li>
                    </ul>
                </li>
                <!-- Control Sidebar Toggle Button -->
               
            </ul>
        </div>
    </nav>
    <script src="/assets/js/socket.io.js"></script>
    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script>
        var socket = io();
        $(document).ready(function(){
            socket.emit("Client-Thong-Bao", []);
            socket.on("thongBao", function(data) {
                if (data.length==0) {
                    socket.emit("Client-Thong-Bao", []);
                } else {
                    $("#countNotifi").html(data.length);
                    $("#dropdownmenuThongBao").html(`<li class="header">Bạn có `+ data.length +` thông báo</li>
                            <li>
                                <ul class="menu">
                                    <li>
                                        <a href="/admin/order/new">
                                            <i class="fa fa-users text-aqua"></i>Có `+ data.length +` đơn hàng mới cần được duyệt
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="footer"><a href="#">Xem tất cả</a></li>`);
                }
            });
        });
    </script>
     <script type="text/javascript">

        $(document).ready(function() {
            document.title = 'Quản lý';
        });
    
    </script>
</header>
