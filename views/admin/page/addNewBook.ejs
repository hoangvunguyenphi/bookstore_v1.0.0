<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">

        <% include ../alayout/aheader.ejs%>
        <!-- Left side column. contains the logo and sidebar -->
        <% include ../alayout/anav.ejs %>
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    General Form Elements
                    <small>Preview</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li><a href="#">Forms</a></li>
                    <li class="active">General Elements</li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-body">
                            <div class="col-md-6">
                                <h4><i class="fa fa-list"></i> &nbsp; Danh sách sản phẩm</h4>
                            </div>
                            <div class="col-md-6 text-right">
                                <a href="/admin/product/addNew" class="btn btn-success"><i class="fa fa-plus"></i>
                                    Thêm mới sản phẩm</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <!-- general form elements -->
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">Thêm mới sản phẩm</h3>
                            </div>
                            <!-- /.box-header -->
                            <!-- form start -->
                            <form method="POST" action="/admin/product/saveNewBook" enctype="multipart/form-data">
                                <div class="box-body">
                                    <div class="form-group col-xs-4">
                                        <label for="newSKU">SKU</label>
                                        <input type="text" class="form-control" id="newSKU" name="newSKU" placeholder="Nhập SKU"
                                            required>
                                    </div>
                                    <div class="form-group col-xs-8">
                                        <label for="newTieuDe">Tiêu đề</label>
                                        <input type="text" class="form-control" id="newTieuDe" name="newTieuDe"
                                            required placeholder="Nhập tiêu đề sách">
                                    </div>
                                    <div class="form-group  col-xs-4">
                                        <label for="newTacGia">Tác giả</label>
                                        <input type="text" class="form-control" id="newTacGia" name="newTacGia"
                                            required placeholder="Nhập tên tác giả">
                                    </div>
                                    <div class="form-group col-xs-4">
                                        <label for="newNgonNgu">Ngôn ngữ</label>
                                        <select class="form-control" id="newNgonNgu" name="newNgonNgu">
                                            <option value="Tiếng Việt">Tiếng Việt
                                            </option>
                                            <option value="Nước Ngoài">Nước Ngoài</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-xs-4">
                                        <label for="newTheLoai">Thể loại</label>
                                        <select class="form-control" id="newTheLoai" name="newTheLoai">
                                            <% cat.forEach(function(ca){
                                                    %>
                                            <option value="<%=ca.tentheloai%>">
                                                <%=ca.tentheloai%>
                                            </option>
                                            <%})%>
                                        </select>
                                    </div>
                                    <div class="form-group col-xs-4">
                                        <label for="newDichGia">Dịch giả</label>
                                        <input type="text" class="form-control" id="newDichGia" name="newDichGia"
                                            placeholder="Nhập tên dịch giả">
                                    </div>
                                    <div class="form-group col-xs-4">
                                        <label for="newNgayXuatBan">Ngày xuất bản</label>
                                        <input type="text" class="form-control pull-right" id="datepicker" name="newNgayXuatBan"
                                            placeholder="Nhập ngày xuất bản">
                                    </div>
                                    <div class="form-group col-xs-4">
                                        <label for="newNhaXuatBan">Nhà xuất bản</label>
                                        <input type="text" class="form-control" id="newNhaXuatBan" name="newNhaXuatBan"
                                            placeholder="Nhập tên nhà xuất bản">
                                    </div>
                                    <div class="form-group col-xs-4">
                                        <label for="newSoTrang">Số trang</label>
                                        <input type="text" class="form-control" id="newSoTrang" name="newSoTrang"
                                            placeholder="Nhập số trang">
                                    </div>
                                    <div class="form-group col-xs-8">
                                        <label for="newKichThuoc">Kích thước</label>
                                        <input type="text" class="form-control" id="newKichThuoc" name="newKichThuoc"
                                            placeholder="Nhập kích cỡ sách">
                                    </div>
                                    <div class="form-group col-xs-12">
                                        <label for="newMoTa">Mô tả</label>
                                        <div class="form-group">
                                            <textarea id="newMoTa" name="newMoTa" class="form-control" style="height: 300px">
                                            </textarea>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="newDanhDau">Đánh dấu</label>
                                        <select class="form-control select2" multiple="multiple" data-placeholder="Chọn đánh dấu"
                                            id="newDanhDau" name="newDanhDau" style="width: 100%;">
                                            <option>new</option>
                                            <option>hot</option>
                                            <option>sale</option>
                                            <option>popular</option>
                                            <option>weeekdeal</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="newGia">Giá</label>
                                        <input type="text" class="form-control" id="newGia" name="newGia" placeholder="Nhập giá bán"
                                            required>
                                    </div>
                                    <div class="form-group col-md-12">
                                        <label>Hình ảnh</label>
                                        <input type="file" name="newImgUpload" id="newImgUpload" class="form-control"
                                            accept="image/gif, image/jpeg, image/jpg, image/png" required onchange="return ValidateExtension()">
                                        <p id="lblError" style="color:red"></p>
                                    </div>
                                </div>
                                <!-- /.box-body -->
                                <div class="box-footer ">
                                    <input type="submit" style="float:right" id="btnAdd" class="btn btn-primary col-lg-3 "
                                        value="Thêm sách" onclick="return ValidateExtension()" />
                                </div>
                            </form>
                        </div>
                        <script type="text/javascript">
                            function ValidateExtension() {
                                var allowedFiles = [".jpg", ".jpeg", ".png", ".gif", ".bmp"];
                                var fileUpload = document.getElementById("newImgUpload");
                                var btnAdd = document.getElementById("btnAdd");
                                var lblError = document.getElementById("lblError");
                                var regex = new RegExp("([a-zA-Z0-9\s_\\.\-:])+(" + allowedFiles.join('|') + ")$");
                                var maxfilesize = 3 * 1024 * 1024; // 3 Mb
                                var filesize = fileUpload.files[0].size;
                                lblError.innerHTML = "";
                                btnAdd.disable = false;
                                if (filesize < maxfilesize) {
                                    if (regex.test(fileUpload.value.toLowerCase())) {
                                        lblError.innerHTML = "";
                                        btnAdd.disable = false;
                                        btnAdd.style.backgroundImage = "rgb(236, 240, 241)"
                                        return true;
                                    } else {
                                        lblError.innerHTML =
                                            "Vui lòng chọn file có tên phù hợp chỉ chứa chữ, số, các kí tự cho phép _-. và có định dạng: <b>" +
                                            allowedFiles.join(', ') + "</b>  !";
                                        btnAdd.disable = true;
                                        return false;
                                    }
                                } else {
                                    lblError.innerHTML = "Vui lòng chọn file có kích thước nhỏ hơn 3MB " + "</b> !";
                                    btnAdd.disable = true;
                                    return false;
                                }
                            }
                        </script>
                        <!-- /.box -->
                    </div>
                    <!--/.col (right) -->
                </div>
                <!-- /.row -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.4.0
            </div>
            <strong>Copyright &copy; 2014-2016 <a href="https://adminlte.io">Almsaeed Studio</a>.</strong> All rights
            reserved.
        </footer>
